<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="edu.ucsb.cs.cs190i.papertown.town.towndetail.TownDetailActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_detail"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/PrimaryPink"
            android:elevation="0dp"
            android:minHeight="130dp" />
    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:id="@+id/scrollView_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/detail_town_image"
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:contentDescription="town image"
                android:scaleType="centerCrop"
                android:src="@drawable/corridor" />

            <TextView
                android:id="@+id/detail_town_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/m"
                android:layout_marginStart="@dimen/m"
                android:layout_marginTop="16dp"
                android:text="Malibu Dream Airstream"
                android:textAppearance="@style/TitleText_detail" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/m"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingTop="@dimen/m">

                <ImageView
                    android:id="@+id/detail_town_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_location_city_white_24dp"
                    android:backgroundTint="@color/PrimaryPink" />

                <TextView
                    android:id="@+id/detail_town_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/xs"
                    android:text="Place"
                    android:textAppearance="@style/footerText_list"
                    android:textColor="@color/PrimaryPink" />

                <TextView
                    android:id="@+id/detail_town_visit_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/s"
                    android:layout_toRightOf="@+id/detail_town_category"
                    android:text="75 likes"
                    android:textAppearance="@style/footerText_list" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/m"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/detail_town_author"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/m"
                    android:layout_marginTop="@dimen/xs"
                    android:text="by"
                    android:textAppearance="@style/footerText_list" />

                <TextView
                    android:id="@+id/detail_town_information"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/s"
                    android:layout_marginTop="@dimen/xs"
                    android:text="Author"
                    android:textAppearance="@style/footerText_list"
                    android:textColor="@color/PrimaryPink" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginEnd="@dimen/m"
                android:layout_marginStart="@dimen/m"
                android:background="@color/LightestGray" />

            <RelativeLayout
                android:id="@+id/detail_update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/m">

                <TextView
                    android:id="@+id/detail_town_des"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Description"
                    android:textAppearance="@style/MainTextBold_detail" />

                <TextView
                    android:id="@+id/detail_update_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:text="Update Story"
                    android:textAllCaps="true"
                    android:textAppearance="@style/footerText_list"
                    android:textColor="@color/PrimaryPink" />

                <ImageButton
                    android:id="@+id/detail_update_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/xs"
                    android:layout_toLeftOf="@id/detail_update_text"
                    android:background="@drawable/ic_add_white_18dp"
                    android:backgroundTint="@color/PrimaryPink" />
            </RelativeLayout>

            <TextView
                android:id="@+id/detail_town_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/m"
                android:layout_marginEnd="@dimen/m"
                android:layout_marginBottom="@dimen/m"
                android:text="Description here. ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor "
                android:textAppearance="@style/MainText_list" />

            <TextView
                android:id="@+id/detail_town_update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/m"
                android:layout_marginStart="@dimen/m"
                android:text=""
                android:textAppearance="@style/MainTextRegular_detail" />


            <fragment
                android:id="@+id/detail_map"
                class="edu.ucsb.cs.cs190i.papertown.town.newtown.MyMapFragment"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="@dimen/m" />

            <TextView
                android:id="@+id/detail_coor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/m"
                android:layout_marginTop="@dimen/l"
                android:text="Coordinates"
                android:textAppearance="@style/MainTextBold_detail" />

            <TextView
                android:id="@+id/detail_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/m"
                android:text="Coordinate"
                android:textAppearance="@style/MainText_list" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginEnd="@dimen/m"
                android:layout_marginStart="@dimen/m"
                android:background="@color/LightestGray" />

            <TextView
                android:id="@+id/detail_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/m"
                android:layout_marginTop="@dimen/m"
                android:text="Address"
                android:textAppearance="@style/MainTextBold_detail" />

            <TextView
                android:id="@+id/detail_physical_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/m"
                android:text="Address here. Olancha, CA 93549."
                android:textAppearance="@style/MainText_list" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginEnd="@dimen/m"
                android:layout_marginStart="@dimen/m"
                android:background="@color/LightestGray" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/m">

                <TextView
                    android:id="@+id/detail_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Gallery"
                    android:textAppearance="@style/MainTextBold_detail" />

                <TextView
                    android:id="@+id/detail_add_image_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:text="Upload Image"
                    android:textAllCaps="true"
                    android:textAppearance="@style/footerText_list"
                    android:textColor="@color/PrimaryPink" />

                <ImageButton
                    android:id="@+id/detail_add_image_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/xs"
                    android:layout_toLeftOf="@id/detail_add_image_text"
                    android:background="@drawable/ic_add_white_18dp"
                    android:backgroundTint="@color/PrimaryPink" />

            </RelativeLayout>

            <edu.ucsb.cs.cs190i.papertown.town.newtown.WrappingGridView
                android:id="@+id/detail_image_grid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/m"
                android:gravity="center"
                android:numColumns="4" />

            <View
                android:id="@+id/detail_related_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginEnd="@dimen/m"
                android:layout_marginStart="@dimen/m"
                android:layout_marginTop="@dimen/m"
                android:background="@color/LightestGray" />

            <!--<TextView-->
            <!--android:id="@+id/detail_ske"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginStart="@dimen/m"-->
            <!--android:layout_marginTop="@dimen/m"-->
            <!--android:text="Sketchboard"-->
            <!--android:textAppearance="@style/MainTextBold_detail" />-->

            <!--<ImageView-->
            <!--android:id="@+id/detail_sketch"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="160dp"-->
            <!--android:layout_marginTop="@dimen/m"-->
            <!--android:layout_marginBottom="@dimen/s"-->
            <!--android:scaleType="centerCrop"-->
            <!--android:background="@color/LighterGray"/>-->

            <TextView
                android:id="@+id/detail_related"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/m"
                android:layout_marginTop="@dimen/m"
                android:text="Nearby towns"
                android:textAppearance="@style/MainTextBold_detail" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/detail_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent" />


            <Button
                android:id="@+id/button_test_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Button"
                android:textAllCaps="true"
                android:textAppearance="@style/MainTextBold_detail"
                android:textColor="@android:color/white" />
        </LinearLayout>

    </ScrollView>


</LinearLayout>