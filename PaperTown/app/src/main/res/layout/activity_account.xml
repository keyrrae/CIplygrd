<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="edu.ucsb.cs.cs190i.papertown.town.account.AccountActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_account"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/PrimaryPink"
            android:elevation="0dp"
            android:minHeight="130dp" />
    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:id="@+id/scrollView_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="@dimen/m"
        android:layout_marginBottom="@dimen/m">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingEnd="@dimen/m"
            android:paddingTop="@dimen/m">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/m">

                <TextView
                    android:id="@+id/textView_username_initial"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/circle"
                    android:gravity="center"
                    android:text="B"
                    android:textSize="@dimen/lT"
                    android:textColor="@android:color/white"/>

                <TextView
                    android:id="@+id/textView_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/textView_username_initial"
                    android:layout_marginStart="@dimen/m"
                    android:text="Mr. B"
                    android:textAppearance="@style/TitleText_detail"/>

                <TextView
                    android:id="@+id/textView_user_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/textView_username_initial"
                    android:layout_marginStart="@dimen/m"
                    android:layout_below="@id/textView_username"
                    android:text="23 posts" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/l"
                android:background="@color/LightestGray"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/m">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Liked Posts"
                    android:textAppearance="@style/MainTextBold_detail"/>

                <TextView
                    android:id="@+id/textView_liked_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:text="More"
                    android:textAppearance="@style/footerText_list"
                    android:textAllCaps="true"
                    android:textColor="@color/PrimaryPink"/>
            </LinearLayout>

            <edu.ucsb.cs.cs190i.papertown.town.account.MyGridView
                android:id="@+id/gridView_liked"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/m"
                android:gravity="center"
                android:numColumns="3"
                android:horizontalSpacing="@dimen/s"
                android:verticalSpacing="@dimen/l" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/m"
                android:background="@color/LightestGray"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/m"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="My Posts"
                    android:textAppearance="@style/MainTextBold_detail"/>

                <TextView
                    android:id="@+id/textView_my_post_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:text="More"
                    android:textAppearance="@style/footerText_list"
                    android:textAllCaps="true"
                    android:textColor="@color/PrimaryPink"/>
            </LinearLayout>

            <edu.ucsb.cs.cs190i.papertown.town.account.MyGridView
                android:id="@+id/gridView_posts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/m"
                android:columnWidth="90dp"
                android:gravity="center"
                android:horizontalSpacing="10dp"
                android:numColumns="3"
                android:stretchMode="columnWidth"
                android:verticalSpacing="10dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/m"
                android:background="@color/LightestGray"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/m"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="My Drafts"
                    android:textAppearance="@style/MainTextBold_detail"/>

                <TextView
                    android:id="@+id/textView_draft_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:text="More"
                    android:textAppearance="@style/footerText_list"
                    android:textAllCaps="true"
                    android:textColor="@color/PrimaryPink"/>
            </LinearLayout>

            <edu.ucsb.cs.cs190i.papertown.town.account.MyGridView
                android:id="@+id/gridView_draft"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/m"
                android:columnWidth="90dp"
                android:gravity="center"
                android:horizontalSpacing="10dp"
                android:numColumns="3"
                android:stretchMode="columnWidth"
                android:verticalSpacing="10dp" />
        </LinearLayout>
    </ScrollView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Long Press to delete a draft item."
        android:layout_margin="@dimen/m"
        android:textAppearance="@style/footerText_list"
        android:textColor="@color/LighterGray"

        />
</LinearLayout>
