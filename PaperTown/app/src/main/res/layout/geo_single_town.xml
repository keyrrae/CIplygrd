<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android.support.v7.cardview="http://schemas.android.com/apk/res-auto"
    android:id="@+id/geo_card"
    android:layout_width="220dp"
    android:layout_height="200dp"
    android:layout_margin="@dimen/m"


    android.support.v7.cardview:cardBackgroundColor="@android:color/transparent"
    android.support.v7.cardview:cardCornerRadius="0dp"
    android.support.v7.cardview:cardElevation="0dp">

    <RelativeLayout
        android:id="@+id/geo_relative"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/geo_town_image"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:adjustViewBounds="true"
            android:focusable="false"
            android:maxHeight="160dp"
            android:scaleType="centerCrop"
            android:src="@drawable/door" />

        <ImageButton
            android:id="@+id/geo_town_visit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_favorite_border_white_18dp"
            android:layout_margin="@dimen/s"
            android:layout_alignParentEnd="true"
            />

        <ImageView
            android:id="@+id/geo_town_pick_bar"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@android:color/transparent"/>

        <TextView
            android:id="@+id/geo_town_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/geo_town_image"
            android:layout_marginTop="@dimen/s"
            android:text="@string/town_category_place"
            android:textAppearance="@style/TitleText" />

        <TextView
            android:id="@+id/geo_town_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/geo_town_image"
            android:layout_marginLeft="@dimen/s"
            android:layout_marginTop="@dimen/s"
            android:layout_toEndOf="@+id/geo_town_category"
            android:text="Town A"
            android:textAppearance="@style/SubText" />

        <TextView
            android:id="@+id/geo_town_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/geo_town_category"
            android:layout_marginTop="@dimen/xs"
            android:text="53 visitors"
            android:textAppearance="@style/SmallText" />

    </RelativeLayout>

</android.support.v7.widget.CardView>



