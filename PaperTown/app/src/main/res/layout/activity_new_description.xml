<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_newTown_new_description"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/Almost_White" />
    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView_new_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/m"
            android:text="Description"
            android:textAppearance="@style/MainTextBold_detail" />

        <EditText
            android:id="@+id/editText_new_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/m"
            android:layout_below="@id/textView_new_description"
            android:background="@color/Almost_White"
            android:hint="Describe the item with a precise, concise, and professional tone."
            android:textAppearance="@style/MainTextRegular_detail"/>

        <Button
            android:id="@+id/button_new_description_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:backgroundTint="@color/PrimaryPink"
            android:text="Next"
            android:textAllCaps="true"
            android:textAppearance="@style/MainTextBold_detail"
            android:textColor="@android:color/white" />

    </RelativeLayout>


</LinearLayout>
