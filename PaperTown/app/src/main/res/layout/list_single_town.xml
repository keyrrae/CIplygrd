<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_card"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_margin="8dp"
    android:background="@android:color/transparent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent">

        <ImageView
            android:id="@+id/list_town_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:adjustViewBounds="true"
            android:focusable="false"
            android:maxHeight="130dp"
            android:scaleType="centerCrop"
            android:src="@drawable/door" />

        <TextView
            android:id="@+id/list_town_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/list_town_image"
            android:layout_marginLeft="8dp"
            android:fontFamily="Roboto"
            android:text="Town A"
            android:textColor="@color/cardview_dark_background"
            android:textStyle="bold"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/list_town_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/list_town_image"
            android:layout_marginLeft="8dp"
            android:layout_below="@id/list_town_title"
            android:layout_marginTop="4dp"
            android:fontFamily="Roboto"
            android:text="Place"
            android:textSize="10dp"
            android:textColor="@android:color/darker_gray"/>

        <TextView
            android:id="@+id/list_town_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/list_town_image"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="16dp"
            android:layout_below="@id/list_town_title"
            android:layout_marginTop="40dp"
            android:fontFamily="Roboto"
            android:text="Discription here. ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor "
            android:textSize="14dp"
            android:textColor="@android:color/background_dark"/>

        <ImageView
            android:id="@+id/list_town_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_keyboard_arrow_right_black_24dp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>